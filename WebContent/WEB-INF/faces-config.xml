<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
	version="2.3">

	<!-- Misc -->

	<validator>
		<validator-id>emailValidator</validator-id>
		<validator-class>com.tewrrss.presentation.EmailValidator</validator-class>
	</validator>

	<application>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>

	<!-- Reglas de navegación -->
	<navigation-rule>
		<from-view-id>*</from-view-id>

		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>

		<navigation-case>
			<from-outcome>registro</from-outcome>
			<to-view-id>/registro.xhtml</to-view-id>
		</navigation-case>

		<navigation-case>
			<from-outcome>index</from-outcome>
			<to-view-id>/restricted/index.xhtml</to-view-id>
		</navigation-case>

		<!-- Reglas de navegación para la gestión de comunidades. -->
		<navigation-case>
			<from-outcome>communitiesAdmin</from-outcome>
			<to-view-id>/restricted/manageCommunities.xhtml</to-view-id>
		</navigation-case>

		<navigation-case>
			<from-outcome>createCommunity</from-outcome>
			<to-view-id>/restricted/createCommunity.xhtml</to-view-id>
		</navigation-case>

		<navigation-case>
			<from-outcome>error</from-outcome>
			<to-view-id>/error.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/login.xhtml</from-view-id>

		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/restricted/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/register.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/restricted/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- Si devuelve success, pasamos a ver mensajes de la comunidad -->
	<navigation-rule>
		<from-view-id>/restricted/listarcomunidadesuser.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{managecommunitiesbean.guardarComunidad}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/restricted/publicaciones_Comunidad.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
		<!-- Si devuelve success, pasamos a ver mensajes de la comunidad -->
	<navigation-rule>
		<from-view-id>/restricted/unircomunidadexistente.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{managecommunitiesbean.guardarComunidad}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/restricted/publicaciones_Comunidad.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	





	<!-- Gestión de comunidades por admin-->
	<navigation-rule>
		<from-view-id>/manageCommunities.xhtml</from-view-id>

		<!-- Borrado de una comunidad -->
		<navigation-case>
			<from-action>#{managecommunitiesbean.borrarcomunidad}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/restricted/manageCommunities.xhtml</to-view-id>
		</navigation-case>



	</navigation-rule>

	<!-- Creación de comunidades -->




</faces-config>
